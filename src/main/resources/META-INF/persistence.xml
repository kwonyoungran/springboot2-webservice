<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="jpabook">
        <class>com.haenandong.springboot.study.jpabook.ch04.entity.Item</class>
        <class>com.haenandong.springboot.study.jpabook.ch04.entity.Member</class>
        <class>com.haenandong.springboot.study.jpabook.ch04.entity.Order</class>
        <class>com.haenandong.springboot.study.jpabook.ch04.entity.OrderItem</class>
        <properties>

            <!-- 필수 속성 -->
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <!--            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:testdb"/>-->
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/test"/>

            <!-- 옵션 -->
            <!-- H2 데이터베이스 방언 사용 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <!-- 테이블 자동 생성 -->
            <property name="hibernate.hbm2ddl.auto" value="none" />
            <!-- 실행되는 SQL 을 보여줌 -->
            <property name="hibernate.show_sql" value="true" />
            <!-- 실행되는 SQL 을 이쁘게 보여줌 -->
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.use_sql_comments" value="true" />
            <property name="hibernate.id.new_generator_mappings" value="true" />

        </properties>
    </persistence-unit>

</persistence>